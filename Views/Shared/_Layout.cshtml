<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DT191G - Moment 3.2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DT191G___Moment_3._2.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand"
                    style="background-color: black; color: white; border-radius: 15px; padding: 5px 10px; margin-right: 35px;"
                    asp-area="" asp-controller="Home" asp-action="Index">DT191G - Moment 3.2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cds" asp-action="Index">💿
                                CD-skivor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Artists" asp-action="Index">🎤
                                Artister</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">👥
                                Användare</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Borrows" asp-action="Index">📋
                                Lån</a>
                        </li>
                        <form asp-controller="Cds" asp-action="Search" style="display: flex; gap: 5px; align-items: center; height: 100%; position:absolute; top: 0; right: 12px;">
                            <input type="search" name="searchString" placeholder="Sök CD-skivas namn..." style="border-radius: 10px; border-style: solid; padding-left:5px;">
                            <input type="submit" value="🔎 Sök" style="border-radius: 10px; border-style: solid;">
                        </form>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="position: absolute; bottom:0; padding:10px;">
        <div class="container" style="font-size:.85em;">
            Simon Andersson, moment 3.2 i kursen DT191G, Webbutveckling med .NET, VT 2022
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
