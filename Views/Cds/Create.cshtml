@model DT191G___Moment_3._2.Models.Cd

@{
    ViewData["Title"] = "Lägg till ny CD-skiva";
}

<h1>Lägg till ny CD-skiva</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label>
                <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
                <a class="btn btn-primary" style="background-color:greenyellow; color: black; border: none; float:right; margin-top: 10px;" asp-area=""
                    asp-controller="Artists" asp-action="Create">🎤 Lägg till ny artist</a>
            </div>
            <br>
            <br>
            <div class="form-group">
                <label asp-for="CdName" class="control-label"></label>
                <input asp-for="CdName" class="form-control" />
                <span asp-validation-for="CdName" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Lägg till" class="btn btn-primary" />
            </div>
            <br>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}